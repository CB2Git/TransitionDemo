<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EndOneActivity">


    <TextView
        android:id="@+id/tv_end_two1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:background="@color/color1"
        android:gravity="center"
        android:tag="end1"
        android:text="文本一"
        android:textColor="#fff"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:transitionName="transitionOne1"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/tv_end_two2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_end_two2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/color2"
        android:gravity="center"
        android:text="文本二"
        android:textColor="#fff"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_end_two1"
        app:layout_constraintTop_toTopOf="@id/tv_end_two1" />

    <TextView
        android:id="@+id/tv_end_two3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/color3"
        android:gravity="center"
        android:tag="end2"
        android:text="文本三"
        android:textColor="#fff"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:transitionName="transitionOne2"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/tv_end_two1"
        app:layout_constraintStart_toStartOf="@id/tv_end_two1"
        app:layout_constraintTop_toBottomOf="@id/tv_end_two2" />

    <ImageView
        android:id="@+id/iv_end_two4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@color/color5"
        android:src="@drawable/girl"
        android:transitionName="transitionOne3"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/tv_end_two2"
        app:layout_constraintStart_toStartOf="@id/tv_end_two2"
        app:layout_constraintTop_toBottomOf="@id/tv_end_two2" />


</androidx.constraintlayout.widget.ConstraintLayout>